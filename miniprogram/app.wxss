/**app.wxss**/
@import 'weui.wxss';

.container {
 width: 100%;
  }

.con {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #ebaaaa;
  font-family : microsoft yahei ;
  color: rgb(255, 254, 254);
}

page {
  height: 100%;
  font-family:"Noto Sans CJK SC", "Source Han Sans CN";
  
  
}

.h1 {
  font-size: 36rpx;
}

.h2 { 
  font-size: 32rpx;
}

.h3 {
  font-size: 30rpx;
}

.h4 {
  font-size: 28rpx;
}

.h5 {
  font-size: 24rpx;
}

.relative {
  position: relative;
}

.order-fixed view:first-of-type {
  display: none;
}

view {
  box-sizing: border-box;
  -webkit-overflow-scrolling : touch;
}

button:after{
  border:none;
}
