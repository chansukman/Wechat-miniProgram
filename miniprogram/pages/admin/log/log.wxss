page {
  background: #fff;
}

form {
  width: 90%;
  margin: 0 auto;
  display: block;
  font-size: 32rpx;
  padding-top: 30rpx;
  margin-top: 10rpx;
  border-top: 1rpx solid #d1d1d1;
}

form view {
  border-bottom: 1rpx solid #d1d1d1;
  padding: 0 10rpx;
  padding-bottom: 10rpx;
  margin-bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

form .text {
  border-bottom: none;
}

.text navigator {
  font-size: 28rpx;
  border: none;
  margin-bottom: 40rpx;
  background-color: #fff;
}

.text navigator .msg {
  color: #ff5b62;
}

.text navigator text {
  float: right;
  color: #999;
  text-decoration: underline;
}

.btn {
  background: #ff5b62;
  color: #fff;
  width: 80%;
  margin: 0 auto;
  line-height: 2;
  border: none;
  font-size: 32rpx;
  margin-bottom: 50rpx;
  top:2em;
}

.btn::after {
  border: none;
}

.btn:last-of-type {
  background: #fff;
  color: #ff5b62;
  border: 1rpx solid #ff5b62;
}

.form-fixed {
  position: fixed;
  bottom: 0;
  text-align: center;
  width: 100%;
}

.form-fixed image {
  width: 80rpx;
  height:80rpx;
  position:relative;
  right:26rpx;
  top:6rpx;
}

.relative {
  width: 90%;
  margin: 0 auto;
  border-top: 1px solid #cecece;
  padding: 50rpx 0;
  font-size: 28rpx;
  color: #999;
}

.relative view {
  margin: 10rpx auto;
}

.relative view text {
  display: block;
  width: 100%;
}

.or {
  display: inline-block;
  position: absolute;
  top: -15rpx;
  line-height: 28rpx;
  font-size: 28rpx;
  z-index: 99;
  background: #fff;
  width: 120rpx;
  left: 50%;
  margin-left: -60rpx;
}

.loginBg{
  width:85rpx;
  height:90rpx;
  border:#fff;
}

/*去掉按钮边框*/
button[plain] {
  border: 0;
}
.my {
  background: hsl(9, 77%, 58%);
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  padding: 100rpx 0;
  position: relative;
  padding-bottom: 160rpx;
  
}

.my text {
  width: 100%;
  display: block;
  line-height: 1.6;
}

.my-photo {
  width: 220rpx;
  height: 220rpx;
  border-radius: 50%;
  border: 7rpx solid #fff;
  margin: 0 auto;
  margin-bottom: 15rpx;
  margin-top: 30rpx;
}

.userinfo-avatar {
  display: block;
  overflow: hidden;
}
