<import src="/pages/tpls/search/search.wxml" />
<view class="container" >
  <view class="my">
    <!--根据用户是否登录做出显示效果  -->
    
    
    
    <view class="smile"> <text class="smile"  bindtap="onSignIn">退出登录</text></view>
     <open-data type="userAvatarUrl" class="my-photo userinfo-avatar"></open-data>
     <text>{{name}}</text>



    
    <view class='a'>
      <view class="my-bottom" wx:for="{{collection}}">
        <view>
          <text>{{uid ? userMsg.money : 0}} 元</text>
          <text>钱包余额</text>
        </view>
         <view> |</view>
        <view>
          <text>{{item.point}} 个</text>
          <text>积分</text>
        </view>
         <view> |</view>
        <view>
          <text>{{uid ? userMsg.inte : 0}} 级</text>
          <text>积分排名</text>
        </view>
      </view>
    </view>
  </view>

  <view class="money">
    <block wx:for="{{payContact}}" wx:key="key">
      <view>
        <image mode="widthFix" src="{{item.img}}" data-idx="{{item.id}}" bindtap="{{item.bind}}"></image>
        <text>{{item.text}}</text>
      </view>
    </block>
  </view>
  
 

   <view class="my-address" bindtap='myStudy'>
      <image mode="widthFix" src="/images/my/9.png"></image>
      <text>学习报告</text>
    </view>
    
    <view class="my-address" bindtap='onRelease'>
      <image mode="widthFix" src="/images/my/10.png"></image>
      <text>我的发布</text>
    </view>



     <view class="my-address" bindtap='onAddress'>
    <image mode="widthFix" src="/images/my/5.png"></image>
    <text>地址管理</text>
  </view>
    
   
  </view>

  <view class="my-address" bindtap='mathPoint'>
    <image mode="widthFix" src="/images/my/7.png"></image>
    <text>积分计算规则</text>
  </view>
