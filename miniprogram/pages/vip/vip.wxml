<view id="category-container">
  <view id="view_search">
   <text>欢迎进入30天学好语数英课堂！</text>
  </view>

  <view id='category'>
    <!--左侧栏-->
    <scroll-view class="nav_left" scroll-y='true'>
      <block wx:for="{{cateItems}}">
      <!--当前项的id等于item项的id，那个就是当前状态-->
      <!--用data-index记录这个数据在数组的下标位置，使用data-id设置每个item的id值，供打开2级页面使用-->
        <view class="nav_left_items {{curNav == item.cate_id ? 'active' : ''}}" bindtap="switchRightTab" data-index="{{index}}" data-id="{{item.cate_id}}">
          {{item.cate_name}}
        </view>
      </block>
    </scroll-view>

    <!--右侧栏-->
    <scroll-view class="nav_right">
      <!--如果有数据，才遍历项-->
<!--item开始-->
      <view wx:if="{{cateItems[curIndex].ishaveChild}}">
        <block wx:for="{{cateItems[curIndex].children}}">
          <view class="nav_right_items">
            <!--界面跳转 -->
              <image src="{{item.image}}" bindtap="{{item.location}}"></image>
              <text>{{item.name}}</text>
              
          </view> 

        </block>
      </view>
      <view class="nodata_text" wx:else>
<!--item结束-->
<!--item1开始-->

      <view wx:if="{{cateItems[curIndex].ishaveChild1}}">
        <block wx:for="{{cateItems[curIndex].children}}">
          <view class="nav_right_items1">
            <!--界面跳转 -->
              <image src="{{item.image}}" bindtap="{{item.location}}"></image>
              <text>{{item.name}}</text>
              
          </view> 
        </block>
      </view>
<!--item1结束-->
<!--item2开始-->

      <view wx:if="{{cateItems[curIndex].ishaveChild2}}">
        <block wx:for="{{cateItems[curIndex].children}}">
          <view class="nav_right_items2">
            <!--界面跳转 -->
              <image src="{{item.image}}" bindtap="{{item.location}}"></image>
              <text>{{item.name}}</text>
              
          </view> 
        </block>
      </view>
<!--item1结束-->
      
      
      </view>
    </scroll-view>
  </view>
</view>