<view class="container">
  <form bindsubmit="formSubmit">
    <view class="title" >
      <image src="/images/icon/import.png"></image>
      <text >标题：</text>
      <input name="title" bindinput="title">{{title}}</input>
    </view>

    <view class="title details">
      <image src="/images/icon/import.png"></image>
      <text >描述：</text>
      <input name="desc" maxlength='-1' bindinput="titleDetails">{{titleDetails}}
      </input>
    </view>

    <view class="title content" >
      <image src="/images/icon/import.png"></image>
      <text >内容：</text>
      <input name="content" maxlength='-1' bindinput="titleContent">{{titleContent}}
      </input>
    </view>

    <button class="release" formType="submit">发布</button>
  </form>
</view>